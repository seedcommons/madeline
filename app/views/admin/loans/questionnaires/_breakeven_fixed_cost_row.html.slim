- hidden ||= false
- cost ||= {}
- prefix = "response_set[answers_attributes][#{index}][breakeven_data][fixed_costs][]"

tr.ui-state-default data-group="fixed_cost" class=("hidden" if hidden)
  td: input.form-control.form-element name="#{prefix}[name]" value=cost[:name]
  td: input.amount.form-control.form-element name="#{prefix}[amount]" type="number" value=cost[:amount]
  td: .actions
    a.delete data-action="delete" title=I18n.t('loan.breakeven.remove_row')
      i.fa.fa-trash
    a.move data-action="move" title=I18n.t('loan.breakeven.move_row')
      i.fa.fa-arrows-v
